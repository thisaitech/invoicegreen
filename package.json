{
  "name": "estimate-app",
  "version": "1.0.0",
  "description": "Simple Estimate Generator with Zebra Printer Support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "node fix-electron.js",
    "dev": "concurrently \"npm run start\""
  },
  "keywords": [
    "estimate",
    "invoice",
    "zebra",
    "printer"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.estimate.generator",
    "productName": "Estimate Generator",
    "win": {
      "target": ["portable", "nsis"],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "output": "dist"
    }
  }
}
